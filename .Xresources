!! *.alpha: 0
!! *.font: 'MesloLGS NF:size=10'
!! *.background: #232627

Xcursor.size: 16
Xcursor.theme: xcursor-breeze

!! i3
i3wm.border_active: ACCENT_COLOR
i3wm.border_inactive: #5F676A

!! Tabbed (only configured via i3 config for now)
tabbed.normal_background: BACKGROUND_COLOR

!! dmenu
dmenu.font: FONT
dmenu.foreground: FOREGROUND_COLOR
dmenu.background: BACKGROUND_COLOR
dmenu.selbackground: ACCENT_COLOR
dmenu.selforeground: FOREGROUND_COLOR

!! polybar
polybar.i3_focus_background: ACCENT_COLOR
polybar.foreground: FOREGROUND_COLOR
polybar.background: #AA262626

!! To have GTK 3 programs have a consistent cursor size 
!! with X, set gtk-cursor-theme-size=n for n as in 
!! Xcursor.size. 
!! The setting can be found in .config/gtk-3.0/settings.ini
